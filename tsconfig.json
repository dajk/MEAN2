{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "filesGlob": [
    "./client/**/*.ts",
    "./client/app/**/*.ts",
    "./server/**/*.ts",
    "./test/**/*.spec.ts"
  ]
}
