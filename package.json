{
  "name": "meant-stack-todo",
  "version": "1.0.0",
  "description": "",
  "main": "server/app.js",
  "scripts": {
    "start": "concurrently \"npm run tsc:w\" \"nodemon ./server/app.js\" ",
    "tsc:w": "tsc -w",
    "tsc": "tsc",
    "pretest": "tsc ./test/*.ts",
    "test": "karma start karma.conf.js --browsers PhantomJS debug --single-run",
    "test:w": "karma start karma.conf.js --browsers PhantomJS debug",
    "test:debug": "karma start karma.conf.js --browsers Chrome debug",
    "clean:prod": "rimraf public/app/ public/systemjs.config.js public/bundle.min.js public/styles.css public/node_modules",
    "cp:client": "cpx \"./tools/systemjs.config.js\" ./public/ && cpx \"./client/app/components/**/*.{html,css}\" ./public/app/components/ && cpx \"./client/styles.css\" ./public/",
    "prebuild:prod": "npm upgrade --global yarn",
    "build:prod": "npm run clean:prod && tsc && npm run cp:client && node ./tools/builder.js",
    "postbuild:prod": "cd public && yarn",
    "postinstall": ""
  },
  "keywords": [
    "mongodb",
    "expressjs",
    "angular 2",
    "node.js",
    "typescript",
    "ngrx"
  ],
  "author": "Radovan Hajdukovic <hajdukovic.radovan@gmail.com> (https://at.linkedin.com/in/radovan-hajdukovic-a2004984)",
  "license": "ISC",
  "dependencies": {
    "@angular/common": "4.3.1",
    "@angular/compiler": "4.3.1",
    "@angular/core": "4.3.1",
    "@angular/forms": "4.3.1",
    "@angular/http": "4.3.1",
    "@angular/platform-browser": "4.3.1",
    "@angular/platform-browser-dynamic": "4.3.1",
    "@angular/router": "4.3.1",
    "@ngrx/core": "^1.2.0",
    "@ngrx/effects": "4.0.1",
    "@ngrx/store": "4.0.0",
    "angular-in-memory-web-api": "0.3.2",
    "body-parser": "1.17.2",
    "core-js": "^2.4.1",
    "express": "4.15.3",
    "mongoose": "4.11.4",
    "reflect-metadata": "^0.1.10",
    "rxjs": "5.4.2",
    "systemjs": "^0.20.16",
    "zone.js": "0.8.14"
  },
  "devDependencies": {
    "@types/body-parser": "1.16.4",
    "@types/express": "4.0.36",
    "@types/jasmine": "2.5.53",
    "@types/mongoose": "4.7.19",
    "@types/node": "8.0.16",
    "concurrently": "^3.5.0",
    "cpx": "^1.5.0",
    "jasmine-core": "2.6.4",
    "jasmine-spec-reporter": "4.1.1",
    "karma": "1.7.0",
    "karma-chrome-launcher": "2.2.1",
    "karma-jasmine": "^1.1.0",
    "karma-mocha-reporter": "2.2.3",
    "karma-phantomjs-launcher": "^1.0.4",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "systemjs-builder": "^0.16.9",
    "tslint": "5.5.0",
    "typescript": "2.4.2"
  },
  "repository": {
    "url": "git@github.com:dajk/meant-stack-todo.git",
    "type": "git"
  }
}
